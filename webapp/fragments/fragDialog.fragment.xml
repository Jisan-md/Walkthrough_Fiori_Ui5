<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form" 
>
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}"
        contentWidth="600px"
        titleAlignment="Center"
        contentHeight="400px"
    >
    <content>
         <core:Icon
            src="sap-icon://popup-window"
            size="8rem"
            class="sapUiLargeMarginBegin sapUiMediumMarginTop"/>
      </content>
        <beginButton>
            <Button
                text="Close"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>